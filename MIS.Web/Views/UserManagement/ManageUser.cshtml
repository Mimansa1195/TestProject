                    <div class="col-md-6">
                        <label class="control-label ">Current Ext. No.</label>
                        <div class="form-group">
                            <input type="text" class="form-control" disabled="disabled" id="txtExtNo" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label ">New Ext. No.</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtNewExtNo" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="control-label ">Current WS. No.</label>
                        <div class="form-group">
                            <input type="text" class="form-control" disabled="disabled" id="txtWSNo" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label ">New WS. No.</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtNewWSNo" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnEditOffShoreUserDetail" type="button" class="btn btn-success"><i class="fa fa-"></i>&nbsp;Edit </button>
                <button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>

