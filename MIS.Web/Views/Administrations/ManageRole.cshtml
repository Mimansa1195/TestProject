


<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Manage Role</h5>
            <div>
                <button type="button" class="btn btn-success" onclick="addRole();">Add Role</button>
            </div>
            <div role="tabpanel" class="tab-pane margin-top-10">
                <section>
                    <div class="row form-body">
                        <div class="col-md-12 clearfix">
                            <table id="tblRoleList" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</div>

<div id="modaladdRols" class="modal fade" role="dialog" aria-labelledby="modaladdRols" aria-hidden="true">
    <div class="modal-dialog  ">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Add Role</h4>
            </div>
            <div class="container margin-top-25 margin-bottom-15  ">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label>Role Name<span class="spnError">*</span></label>
                            <input type="text" class="form-control validation-required" id="txtRole" />
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSaveRole"><i class="fa fa-save"></i>&nbsp;Add</button>
                <button id="btnClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>


<div id="modalEditRole" class="modal fade" role="dialog" aria-labelledby="modalEditRole" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Update Role</h4>
            </div>
            <div class="container margin-top-25 margin-bottom-15">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Role Name<span class="spnError">*</span></label>
                            <input type="text" class="form-control validation-required" id="txtRoleEdit" />
                        </div>
                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnUpdateRole"><i class="fa fa-save"></i>&nbsp;Update</button>
                <button id="btnEditClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>

