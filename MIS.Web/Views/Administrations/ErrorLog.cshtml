<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Error Logs</h5>
            <div class="form-group col-md-4">

                <div class="inputGroupContainer date date-picker" id="errorDate">
                    <div class="input-group">
                        <input class="form-control validation-required" type="text" readonly="" placeholder="Log Date" onchange="FetchErrorLogs();" />
                        <span class=" input-group-btn">
                            <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <table id="tblErrorLogs" data-filter-control="true" data-toolbar="#toolbar" class="table table-hover"></table>
            </div>
        </div>
    </section>
</div>

<div id="mypopupErrorLogs" class="modal fade" role="dialog" aria-labelledby="mypopupErrorLogs" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Error Log</h4>
            </div>
            <div class="modal-body" id="UpdateSkills">
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label><strong>Target Site :</strong></label>
                        </div>
                        <div class="col-md-12">
                            <span id="spnTargetSite"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label><strong>Message :</strong></label>
                        </div>
                        <div class="col-md-12">
                            <span id="spnMessage"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label><strong>Stack Trace :</strong></label>
                        </div>
                        <div class="col-md-12" style="max-height:300px;overflow:auto">
                            <span id="spnStackTrace"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/Administrations/errorLogs.js?v=1.1"></script>


