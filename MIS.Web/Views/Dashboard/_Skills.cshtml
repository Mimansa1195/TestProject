<div class="modal-content" id="skillsdiv">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 id="modalTitle" class="modal-title">Add Skills</h4>
    </div>
    <div class="container margin-top-10" id="UpdateSkills">
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Technology<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <select class="form-control select2 validation-required" id="ddlSkills">
                        <option value="0">Select</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Proficiency Level<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <select class="form-control select-validate validation-required" id="ddlSkillLevel">
                        <option value="0">Select</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Skill Type<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <select class="form-control select-validate validation-required" id="ddlSkillType"></select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Experience (In Months)<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <input type="text" id="expinMonths" maxlength="3" class="form-control validation-required" placeholder="Experience (In Months)" onkeypress="return isNumber(event)" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-12">
                    <span class="spnError">Proficiency Level: Beginner(upto 12 months); Intermediate(12+ months); Expert(36+ months)</span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSaveSkills" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
        <button id="btnskillsClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
    </div>
</div>
<script src="~/Scripts/app/Dashboard/_skills.js?v=2"></script>