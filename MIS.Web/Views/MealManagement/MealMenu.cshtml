<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Meal Menu</h5>
            <div style="margin-bottom:10px">
                <button type="button" class="btn btn-success" onclick="addMealMenu()">Add Meal Menu</button>
            </div>
            <div class="clearfix">
                <br />
                <table id="tblMenuList" data-filter-control="true" data-toolbar="#toolbar" class="table table-hover"></table>
            </div>
        </div>
    </section>
</div>

<div id="mypopupAddMealMenu" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Add Meal Menu</h4>
            </div>
            <div class="modal-body" id="divAddMenu">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="control-label">Meal Packages</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select2 validation-required" id="ddlMealPackages"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Date<span class="spnError">*</span></label>
                            <div class="inputGroupContainer date date-picker">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" id="forDate">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-12">
                    <div class="form-group">
                        <label class="control-label">Add Meal Of The Day<span class="spnError">*</span></label>
                        <input id="btnAddControls" class="btn btn-success" type="button" value="+" data-toggle="tooltip"/>
                    </div>
                </div>
                <div id="btnAddControlsContainer" class="row textBox-container">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="saveMenus();"><i class="fa fa-save"></i>&nbsp;Add</button>
                <button id="btnCloseAddMenu" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>

<div id="mypopupUpdateMealMenu" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Update Menu</h4>
            </div>
            <div class="modal-body" id="divUpdateMenu">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="control-label">Meal Packages</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select2 validation-required" id="ddlMealPackagesEdit"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Date<span class="spnError">*</span></label>
                            <div class="inputGroupContainer date date-picker">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" id="forDateEdit">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row col-md-12">
                    <div class="form-group">
                        <label class="control-label">Update Meal Of The Day<span class="spnError">*</span></label>
                        <input id="btnUpdateControlsEdit" class="btn btn-success" type="button" value="+" data-toggle="tooltip" />
                    </div>
                </div>
                <div id="UpdateControlsContainer" class="row textBox-container">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="UpdateMenus();"><i class="fa fa-save"></i>&nbsp;Update</button>
                <button id="btnCloseUpdateMenu" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/MealManagement/mealmenu.js"></script>
