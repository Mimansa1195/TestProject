<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Meal Package</h5>
            <div style="margin-bottom:10px">
                <button type="button" class="btn btn-success" onclick="addMealPackage()">Add Meal Package</button>
            </div>
            <div class="clearfix">
                <table id="tblMealPackage" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
            </div>
        </div>
    </section>
</div>

<div id="mypopupAddMealPackage" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Add Meal Package</h4>
            </div>
            <div class="modal-body">
                <div class="row" id='addMealModal'>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Period</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealPeriod"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Type</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealType"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Category</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealCategory"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="addPackage();"><i class="fa fa-save"></i>&nbsp;Add</button>
                <button id="btnCloseAddPackage" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>

<div id="mypopupEditMealPackage" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Update Meal Package</h4>
            </div>
            <div class="modal-body">
                <div class="row" id='editMealModal'>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Period</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealPeriodEdit"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Type</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealTypeEdit"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Meal Category</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <select class="form-control select-validate validation-required" id="ddlMealCategoryEdit"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="updatePackage();"><i class="fa fa-save"></i>&nbsp;Add</button>
                <button id="btnCloseEditPackage" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/MealManagement/mealpackage.js"></script>
