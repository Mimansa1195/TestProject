        });

        var designationIds = (($('#ddlPopDesignationEdit').val() != null && typeof $('#ddlPopDesignationEdit').val() != 'undefined' && $('#ddlPopDesignationEdit').val().length > 0) ? $('#ddlPopDesignationEdit').val().join(',') : '0');

