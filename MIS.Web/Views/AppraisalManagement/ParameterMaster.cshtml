<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Appraisal Parameter</h5>
            <div>
                <button type="button" class="btn btn-success" id="btnAddParameter">Add Parameter</button>
            </div>
            <div class="row form-body margin-top-10" id="filterDiv">
                <div class="form-group col-md-3">
                    <label class="control-label">Competency<span class="spnError">*</span></label>
                    <div>
                        <p class="form-control-static">
                            <select class="form-control select-validate validation-required" id="ddlCompetency"></select>
                        </p>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Year<span class="spnError">*</span></label>
                    <div>
                        <p class="form-control-static">
                            <select class="form-control select-validate validation-required" id="ddlYear">
                                <option value="0">Select</option>
                            </select>
                        </p>
                    </div>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Status<span class="spnError">*</span></label>
                    <div>
                        <p class="form-control-static">
                            <select class="form-control" id="ddlStatus">
                                <option value="2" selected>All</option>
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </p>
                    </div>
                </div>
                <div class="form-group col-md-3 padding-top30">
                    <button id="btnSearchParameter" type="button" class="btn green"><i class="fa fa-search"></i>&nbsp;Search</button>
                </div>
                <div class="col-md-12 clearfix">
                    <table id="tblParameterList" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                </div>
            </div>
        </div>
    </section>
</div>

<div id="popupAddParameter" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="popupMealPeriodTitle" class="modal-title">Add Parameter</h4>
                <input type="hidden"  value="0" id="isFinalize" />
            </div>
            <div class="modal-body" id="modalAddParameter">
            </div>
        </div>
    </div>
</div>

<div id="popupEditParameter" class="modal fade" role="dialog" aria-labelledby="mypopup" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="popupMealPeriodTitle" class="modal-title">Update Parameter</h4>
            </div>
            <div class="modal-body" id="modalEditParameter">
                <div class="form-group">
                    <label class="control-label">Competency<span class="spnError">*</span></label>
                    <div>
                        <p class="form-control-static">
                            <select class="form-control select-validate validation-required" id="ddlCompetencyEdit"></select>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Parameter Name<span class="spnError">*</span></label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <input type="text" class="form-control validation-required" id="parameterNameEdit" onkeypress="return IsAlphaNumeric(event);" onblur="return IsAlphaNumericValidate(id);" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Weightage<span class="spnError">*</span></label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <select class="form-control" id="ddlWeightageEdit">
                                <option value="5">5</option>
                                <option value="4">4</option>
                                <option value="3">3</option>
                                <option value="2">2</option>
                                <option value="1">1</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnUpdateParameter" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Update Parameter</button>
                <button id="btnClose" type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/app/AppraisalManagement/parametermaster.js?v=11"></script>