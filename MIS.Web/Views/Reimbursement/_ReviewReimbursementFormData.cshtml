<link href="~/Content/lib/fileinput.css?v=1.1" rel="stylesheet" />
<div>
    <div class="row">
        <div class="col-md-3 col-sm-12 form-group">
            <label class="control-label">Type<i class="spnError">*</i></label>
            <select disabled id="txtReimbType" style="text-align:center" class="form-control select2 validation-required"></select>
        </div>
        <div class="col-md-3 col-sm-12 form-group">
            <label class="control-label">Month-Year<i class="spnError">*</i></label>
            <select disabled id="txtMonthYear" placeholder="Category" style="text-align:center" class="form-control select2 validation-required"> </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 m-t-1" style="position:relative;">
        <div id="tblBody" class="rows"></div>
    </div>
</div>
<div class="row">
    <div class="bill-total">
        @*<h6><span class="boldText">Invalid Amount:</span> <span id="invalidAmount" class="m-r-2"></span></h6>*@
        <h6><span class="boldText">Total Amount:</span> <span id="validAmount"></span></h6>
    </div>
</div>
<div class="row" id="divReimbursmentAmount">
    <div class="bill-total">
        <h6><span class="boldText">Requested Amount</span> <input disabled class="form-control text-right" type="text"  id="txtRequestedAmount" /></h6>
        <h6><span class="boldText">Reimbusrement Amount</span> <input disabled oncopy="return false" onpaste="return false" oncut="return false"  class="form-control validation-required text-right" type="text"  id="txtReimburseAmount" /></h6>
    </div>
</div>
<div class="row pull-right" id="divBtn" style="display:none;">
    <div class="col-md-12">
        <button type="button" class="btn btn-outline-info" id="referBackBtn"><i class="fa fa-angle-double-left"></i> Refer Back</button>
        <button type="button" class="btn btn-success" id="approveBtn"><i class="fa fa-thumbs-o-up"></i> Approve</button>
    </div>
</div>

<!-- Reimbursement request html-->
<div id="reimbursementRemark" class="modal fade" role="dialog" aria-labelledby="reimbursementRemark">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Remarks</h4>
            </div>
            <div class="container margin-top-10" id="">
                <div class="form-group col-md-12">
                    <textarea rows="4" cols="2000" id="approverRemark" maxlength="500" class="form-control validation-required"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSubmitReimbursementRemark" type="button" class="btn btn-success"><i class="fa fa-"></i>&nbsp;Approve</button>
                <button data-dismiss="modal" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>
