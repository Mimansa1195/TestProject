<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Request Asset</h5>
            <div id="assetDiv">
                <div class="form-group row">
                    <label class="col-sm-2 form-control-label">From Date<span class="spnError">*</span></label>
                    <div class="col-sm-4">
                        <div class="inputGroupContainer date date-picker" id="dongleIssueFromDate">
                            <div class="input-group">
                                <input type="text" class="form-control validation-required" readonly="" placeholder="From Date" />
                                <span class=" input-group-btn">
                                    <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 form-control-label">Till Date<span class="spnError">*</span></label>
                    <div class="col-sm-4">
                        <div class="inputGroupContainer date date-picker" id="dongleReturnDueDate">
                            <div class="input-group">
                                <input readonly="" class="form-control validation-required" placeholder="Till Date" type="text" />
                                <span class=" input-group-btn">
                                    <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>                        
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleSelect" class="col-sm-2 form-control-label">Reason<span class="spnError">*</span></label>
                    <div class="col-sm-4">
                        <textarea id="reason" rows="4" class="form-control validation-required" placeholder="Reason"></textarea>
                    </div>
                </div>
                <div align="center">
                    <div class="form-group row">
                        <div class="col-sm-2">&nbsp;</div>
                        <div class="col-sm-4" style="text-align:left">
                            <button type="button" class="btn btn-inline" onclick="saveAssetRequest()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/app/Asset/request.js"></script>
