<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 id="modalTitle" class="modal-title">Upload Health Insurance Card</h4>
    </div>
    <div class="container margin-top-10">
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Employee<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <select class="form-control" id="employee"></select>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-4">
                    <label>Health Insurance<span class="spnError">*</span></label>
                </div>
                <div class="col-md-8">
                    <input type="file" class="form-control validation-required" onchange="checkFileIsValid(this);" name="file" id="healthInsuranceCard">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group">
                <div class="col-md-12">
                    <span class="spnError">Selected file format should be .pdf)</span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSaveForm" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
        <button id="btnClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
    </div>
</div>

<script src="~/Scripts/app/HRPortal/uploadHealthInsuranceCard.js"></script>
<script src="~/Scripts/app/HRPortal/manageHealthInsuranceCard.js"></script>