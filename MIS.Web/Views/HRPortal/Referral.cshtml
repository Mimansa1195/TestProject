<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Manage Referrals and Job Openings</h5>
            <div>
                <button type="button" class="btn btn-success" onclick="showAddReferralPopup();">Add Job Posts</button>
            </div>
            <div class="clearfix"><br /></div>
            <table id="tblReferral" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
        </div>
    </section>
</div>
<div id="mypopupAddReferral" class="modal fade" role="dialog" aria-labelledby="mypopupAddReferral" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="buttonClose" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Add Job Posts</h4>
            </div>
            <div class="container margin-top-10">

                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Openings From<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <div class="inputGroupContainer date date-picker" id="fromDate">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" placeholder="Enter start date" name="fromDate" id="fromDateEmp">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Openings Till<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <div class="inputGroupContainer date date-picker" id="tillDate">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" placeholder="Enter end date" name="tillDate" id="tillDateEmp">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Position<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <input maxlength="2000" type="text" class="form-control validation-required" placeholder="Enter position" id="position" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Key Skills<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <textarea rows="5" class="form-control validation-required" style="width:100%" id="jobDescription" maxlength="1000" placeholder="Enter key skills"></textarea>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSaveReferral" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
                <button id="btnClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<div id="modalViewReferees" class="modal fade" role="dialog" aria-labelledby="modalViewReferees" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="header" class="modal-title"></h4>
            </div>
            <div class="container margin-top-10">
                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="form-group">

                            <table id="tblViewReferral" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnViewFwdAll" type="button" class="btn btn-default"><i class="fa fa-arrow-circle-right"></i>&nbsp;Forward All</button>
                <button id="btnViewClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<div id="modalForwardReferees" class="modal fade" role="dialog" aria-labelledby="modalForwardReferees" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="buttonClose" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Foward to reviewers</h4>
            </div>
            <div class="container margin-top-10">
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label">Reviewers Name<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control-static">
                                <select class="form-control" multiple="multiple" id="reviewersName"></select>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Message<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <textarea rows="5" class="form-control validation-required" style="width:100%" id="message" maxlength="1000" placeholder="Enter message"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnFwdReferral" type="button" class="btn btn-success" onclick="sendMailForReferrals();"><i class="fa fa-save"></i>&nbsp;Forward</button>
                <button id="btnFwdClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<div id="editPopup" class="modal fade" role="dialog" aria-labelledby="editPopup" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="buttonEditClose" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Edit Job Openings</h4>
            </div>
            <div class="container margin-top-10">

                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Openings From<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <div class="inputGroupContainer date date-picker" id="fromDateEdit">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" placeholder="Enter start date" name="fromDate" id="fromDateEmpEdit">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Openings Till<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <div class="inputGroupContainer date date-picker" id="tillDateEdit">
                                <div class="input-group">
                                    <input type="text" class="form-control validation-required" readonly="" placeholder="Enter end date" name="tillDate" id="tillDateEmpEdit">
                                    <span class=" input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Position<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <input maxlength="500" type="text" class="form-control validation-required" placeholder="Enter position" id="positionEdit" />
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Key Skills<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <textarea rows="5" class="form-control validation-required" style="width:100%" id="jobDescriptionEdit" maxlength="2000" placeholder="Enter JD"></textarea>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnEditReferral" type="button" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;Save</button>
                <button id="btnEditClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close</button>
            </div>
        </div>
    </div>
</div>
<div id="viewDocumentModal" class="modal fade" role="dialog" aria-labelledby="viewDocumentModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="header1" class="modal-title"></h4>
            </div>
            <div class="container margin-top-10">
                <div id="popupWindowViewDocument">
                    <object id="objViewPdf" type="application/pdf" data="" width="100%" height="500" internalinstanceid="65">No Support</object>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/HRPortal/addReferral.js?v=1.0"></script>



