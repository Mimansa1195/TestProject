<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">HR Leave Dashboard</h5>
            <div class="text-right" style="padding-bottom:5px" id="divDeligation">
            </div>
            <div class="row" id="divLeave">
                <div class="col-xl-12 col-lg-12">
                    <section class="tabs-section">
                        <div class="tabs-section-nav tabs-section-nav-left">
                            <ul class="nav" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#tabLeaveBalance" role="tab" data-toggle="tab">
                                        <span class="nav-link-in text-green">Leave Balance</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#tabAttendenceStatus" role="tab" data-toggle="tab" id="AttendenceStatus">
                                        <span class="nav-link-in text-green">Attendance Status</span>
                                    </a>
                                </li>
                            </ul>
                        </div><!--.tabs-section-nav-->
                        <div class="tab-content no-styled profile-tabs">
                            <div role="tabpanel" class="tab-pane active" id="tabLeaveBalance">
                                <section class="box-typical box-typical-padding">
                                    <div class="form-body">
                                        <div id='divCompleteReviewFormsGridView' class='gridViewBody gridViewContainerBorder'>
                                            <table id="tblLeaveBalance" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                                        </div>
                                    </div>
                                </section>
                            </div><!--.tab-pane-->
                            <div role="tabpanel" class="tab-pane" id="tabAttendenceStatus">
                                <section class="box-typical box-typical-padding">
                                    <div class="row form-group col-md-12">
                                        <label class="control-label">Date<span class="spnError">*</span></label>
                                        <div class="row col-md-4">
                                            <div class="inputGroupContainer date date-picker" id="AttendanceDate">
                                                <div class="input-group">
                                                    <input type="text" class="form-control validation-required" readonly="" name="FromDate" placeholder="Date of Attendance" onchange="getAttendanceForAllEmployees();" />
                                                    @*<input class="formddl generalinput required form-control validation-required" type="text"  />*@
                                                    <span class=" input-group-btn">
                                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-body">
                                        <div id='divCompleteReviewFormsGridView' class='gridViewBody gridViewContainerBorder'>
                                            <table id="tblAttendenceStatus" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                                        </div>
                                    </div>
                                </section>
                            </div><!--.tab-pane-->
                        </div><!--.tab-content-->
                    </section><!--.tabs-section-->
                </div>
            </div>
        </div>
    </section>
</div>
<div id="mypopupUpdateLeaveByHR" class="modal fade" role="dialog" aria-labelledby="mypopupUpdateLeaveByHR" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Update Leave Balance</h4>
            </div>
            <section class="tabs-section">
                <div class="tabs-section-nav tabs-section-nav-left">
                    <ul class="nav" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" href="#tabLeaveCount" role="tab" data-toggle="tab" id="cType">
                                <span class="nav-link-in text-green">Leave Balance</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#tabMLStatus" role="tab" data-toggle="tab" id="lType">
                                <span class="nav-link-in text-green" id="leaveType"></span>
                            </a>
                        </li>
                    </ul>
                </div><!--.tabs-section-nav-->
                <div class="tab-content no-styled profile-tabs">
                    <div role="tabpanel" class="tab-pane active" id="tabLeaveCount">
                        <section class="box-typical box-typical-padding">
                            <div class="container margin-top-10" id="employeeLeaveBalanceDiv">
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>CL<span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control validation-required" placeholder="CL" id="ClCount" maxlength="4" onkeyup="return removeAlphabets(this)" onkeydown="return removeAlphabets(this)" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>PL<span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control validation-required" placeholder="PL" id="PlCount" maxlength="4" onkeyup="return removeAlphabets(this)" onkeydown="return removeAlphabets(this)" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>CompOff<span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control validation-required" placeholder="CL" id="CompOffCount" maxlength="4" onkeyup="return removeAlphabets(this)" onkeydown="return removeAlphabets(this)" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>LWP Marked<span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control validation-required" placeholder="CL" id="LwpCount" maxlength="4" onkeyup="return removeAlphabets(this)" onkeydown="return removeAlphabets(this)" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>CL once in a year<span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <select class="form-control select-validate validation-required" id="5ClCount">
                                            <option value="1">Available</option>
                                            <option value="2">Availed</option>
                                        </select>
                                    </div>
                                </div>
                                <input type="text" id="employeeAbrhs" style="display: none;" />
                            </div>
                        </section>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="tabMLStatus">
                        <section class="box-typical box-typical-padding">
                            <div class="container margin-top-10">
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label id="leaveName"><span class="spnError">*</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" disabled="disabled" class="form-control validation-required" id="mLCount" />
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-4">
                                        <label>Allocation Count<span class="spnError"></span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control validation-required" id="allocationCount" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </section>
            <div class="modal-footer">
                <button id="updateLeaveBalanceByHR" type="button" class="btn btn-success" onclick="updateLeaveBalanceDetails();"><i class=" fa fa-save"></i>&nbsp;Update</button>
                <button id="btnClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/LeaveManagement/dashboard.js?v=4.3" type="text/javascript"></script>

