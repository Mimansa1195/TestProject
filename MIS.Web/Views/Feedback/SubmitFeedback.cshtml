<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Submit Feedback</h5>
            <div>
                <button type="button" class="btn btn-success" onclick="openPopupSubmitFeedback()">Provide Feedback</button>
            </div>
            <div role="tabpanel" class="tab-pane margin-top-10">
                <section>
                    <div class="row form-body">
                        <div class="col-md-12 clearfix">
                            <table id="tblFeedback" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</div>

<div id="modal-submitFeedback" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" name="name" value=" " id="hdnFeedbackId" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Submit Feedback</h4>
            </div>
            <div class="modal-body">
                <div class="form-group" id="submitFeedback">
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <textarea class="form-control validation-required" id="feedback" maxlength="5000" placeholder="Write you comments here." rows="10"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="submitFeedback();"><i class="fa fa-save"></i>&nbsp;Submit</button>
                <button type="button" class="btn btn-default btnClose"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>


<div id="modal-feedback" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" name="name" value=" " id="hdnFeedbackId" />
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">View Feedback</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Employee Name</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <input type="text" disabled="" class="form-control validation-required" placeholder="Enter task sub detail1 name" id="employeeName" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Created Date</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <input type="text" disabled="" class="form-control validation-required" placeholder="Enter task sub detail1 name" id="createdDate" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Acknowledged By</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <input type="text" disabled="" class="form-control validation-required" placeholder="Enter task sub detail1 name" id="acknowledgedBy" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Feedback Message</label>
                    <div class="inputGroupContainer">
                        <div class="input-group">
                            <textarea disabled="" class="form-control validation-required" id="feedbackMessage"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btnClose"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/Feedback/submitFeedback.js?v=1.1"></script>