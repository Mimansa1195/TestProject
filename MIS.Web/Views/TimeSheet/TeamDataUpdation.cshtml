<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-0">Team Timesheet Data Updation</h5>
            <div class="text-right" style="padding-bottom:5px" id="divDeligation">

            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Year</label>
                    <select class="form-control" id="yearSelect">
                        <option selected disabled>Select</option>
                    </select>
                </div>
                <div class="form-group  col-md-4">
                    <label>Week</label>
                    <select class="form-control" id="weekSelect" onchange="weekselectchange();">
                        <option selected disabled>Select</option>
                    </select>
                </div>
            </div>
            <div class="row form-body">
                <div class="col-md-12 clearfix">
                    <table id="tblDataVerificationList" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                </div>
            </div>
        </div>
    </section>
</div>

<div id="myLogNewTaskModal" class="modal fade" role="dialog" aria-labelledby="myLogNewTaskModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title"><span id="txtLogTaskProject"></span> - <span id="txtLogTaskDay"></span> , <span id="txtLogTaskDate"></span></h4>
            </div>
            <div class="modal-body" id="addTaskTemplateDiv">
                <div class="row" id='divLogTaskTemplate'>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Project Name</label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control" id="ddlLogTaskProject">
                                <option value="0">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row" id='divLogTaskDescription'>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Description <span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <textarea type="text" class="form-control form-filter validation-required" placeholder="Description" id="txtLogTaskDescription"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row" id="divLogTaskTeamInfo">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Team Name<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control select-validate validation-required" id="ddlLogTaskTeamName">
                                <option value="0">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" id="divLogTaskTypeInfo">
                        <div class="col-md-4">
                            <label>Task Type<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control select-validate validation-required" id="ddlLogTaskTaskType">
                                <option value="0">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row" id='divLogTaskSubDetail1Info'>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Sub Detail 1<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control select-validate validation-required" id="ddlLogTaskTaskSubDetail1"></select>
                        </div>
                    </div>
                </div>
                <div class="row" id='divLogTaskSubDetail2Info'>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Sub Detail 2<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control select-validate validation-required" id="ddlLogTaskTaskSubDetail2"></select>
                        </div>
                    </div>
                </div>
                <div class="row" id="divLogTaskTimeSpent">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Time Spent (In Hrs.)<span class="spnError">*</span></label>
                        </div>
                        <div class="col-md-8">
                            <select class="form-control select-validate validation-required" id="ddlLogTaskTime">
                                <option value="0">Select</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnLogTask" type="button" class="btn btn-success" value="Add"><i class="fa fa-save">&nbsp;Update</i></button>
                <button id="btnLogTaskClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
                <input type="hidden" id="txtLogTaskTimeSheetId" />
                <input type="hidden" id="txtLogTaskProjectId" />
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/timesheet/teamDataUpdation.js?v=1"></script>