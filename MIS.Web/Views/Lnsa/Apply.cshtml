<div id="mypopupviewLnsaReason" class="modal fade" role="dialog" aria-labelledby="mypopupviewLnsaReason" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Reason</h4>
            </div>
            <div class="container margin-top-10" id="">
                <div class="form-group col-md-12" id="divLnsaReason">
                    <textarea rows="4" cols="2000" id="txtLnsaReason" maxlength="500" class="form-control validation-required"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitRequest" class="btn btn-success">&nbsp;Submit </button>
                <button data-dismiss="modal" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
