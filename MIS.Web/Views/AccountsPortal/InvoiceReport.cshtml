<div class="container-fluid">
    <section class="card">
        <div class="card-block">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="">Invoice Requests / Report</h5>
                </div>
                <div class="col-md-6">
                    <button id="btnAddNew" data-toggle="modal" class="btn btn-success pull-right"><span><i class="fa fa-plus"></i>&nbsp;Add Client</span></button>
                </div>
            </div>
            <h5 class="with-border m-t-0"></h5>
            <div class="row" id="divInvoice">
                <div class="col-xl-12 col-lg-12">
                    <section class="tabs-section">
                        <div class="tabs-section-nav tabs-section-nav-left">
                            <ul class="nav" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#tabReviewInvoice" role="tab" data-toggle="tab" onclick="onReviewInvoiceTabClick();">
                                        <span class="nav-link-in text-green">Review Request</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#tabInvoiceReport" role="tab" data-toggle="tab">
                                        <span class="nav-link-in text-green">Invoice Report</span>
                                    </a>
                                </li>
                            </ul>
                        </div><!--.tabs-section-nav-->
                        <div class="tab-content no-styled profile-tabs">
                            <div role="tabpanel" class="tab-pane active" id="tabReviewInvoice">
                                <section class="box-typical box-typical-padding">
                                    <div class="row form-body">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <table id="tblInvoiceReviewList" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                                                </div>
                                            </div>
                                    </div>
                                </section>

                            </div><!--.tab-pane-->

                            <div role="tabpanel" class="tab-pane" id="tabInvoiceReport">
                                <section class="box-typical box-typical-padding">
                                    <div class="row form-body">
                                        <div class="col-md-12 clearfix">
                                            <div class="row form-body" id="invoiceReportFilter">
                                                <div class="form-group col-md-4">
                                                    <label class="control-label">Client<span class="spnError">*</span></label>
                                                    <div class="inputGroupContainer">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                            <select class="form-control select-validate validation-required" id="clientForReport" name="clientForReport" multiple="multiple" onchange="processInvoiceReport();"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-4">
                                                    <label class="control-label">Financial Year<span class="spnError">*</span></label>
                                                    <div class="inputGroupContainer">
                                                        <div class="input-group">
                                                            @*<span class="input-group-addon"><i class="fa fa-user"></i></span>*@
                                                            <select class="form-control select2 validation-required" id="FYear">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-4">
                                                    <label class="control-label">Month<span class="spnError">*</span></label>
                                                    <div class="inputGroupContainer">
                                                        <div class="input-group">
                                                            @*<span class="input-group-addon"><i class="fa fa-user"></i></span>*@
                                                            <select class="form-control select-validate validation-required" id="month" multiple="multiple" onchange="processInvoiceReport();"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                                    @*<div class="form-group col-md-12 text-right">
                                                        <div class="inputGroupContainer">
                                                            <div class="input-group">
                                                                <button id="btnProcessReportEmp" type="button" class="btn green" onclick="processInvoiceReport()"><i class="fa fa-search"></i>&nbsp;Search</button>
                                                            </div>
                                                        </div>
                                                    </div>*@
                                                </div>
                                            <div class="row">
                                                <div class="col-md-12 clearfix table-responsive">
                                                    <table id="tblInvoiceReportList" class="table table-bordered table-hover display table-striped" role="grid" aria-describedby="example1-info"></table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div><!--.tab-pane-->
                        </div>
                    </section><!--.tabs-section-->
                </div>
            </div>

        </div>
    </section>
</div>
<div id="popupAddClient" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" id="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 id="modalTitle" class="modal-title">Add Client</h4>
            </div>
            <div class="container margin-top-25 margin-bottom-15">
                <div class="col-md-12 itemRow" id="addClient">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Client Name<span class="spnError">*</span></label>
                                <div class="input-group">
                                    <input type="text" tabindex="1" class="form-control validation-required" id="clientName" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button  tabindex="2"  type="button" class="btn btn-success" onclick="addClient()"><i class="fa fa-save"></i>&nbsp;Save</button>
                <button  tabindex="3"  type="button" class="btn btn-default btnClose" id="closeAnother"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>
<div id="mypopupReason" class="modal fade" role="dialog" aria-labelledby="mypopupReason" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="heading">Reject Request</h4>
            </div>
            <div class="container margin-top-10" id="reasonDiv">
                <div class="form-group col-md-12">
                    <textarea rows="4" cols="2000" id="reason" maxlength="500" placeholder="Please enter reason for rejection." class="form-control validation-required"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button id="submitReasonRemark" type="button" class="btn btn-success"><i class="fa fa-"></i>&nbsp;Submit </button>
                <button id="btnReasonClose" type="button" class="btn btn-default"><i class="fa fa-times"></i>&nbsp;Close </button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/app/AccountsPortal/invoiceReport.js?v=1.4"></script>
